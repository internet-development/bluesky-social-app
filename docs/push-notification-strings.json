{
  "_meta": {
    "version": 1,
    "purpose": "Draft catalog of push notification strings for server-side localization (or client-side if adopted). Keys map to NotificationReason variants with placeholders.",
    "notes": [
      "Templates use ICU-style placeholders in {braces}.",
      "Server should choose the correct variant (single vs multi) and supply required placeholders.",
      "If a placeholder is unavailable, omit related fragment or choose a simpler variant.",
      "Title may be omitted by platforms that only show body; provide both where supported.",
      "These are English source strings for translation; product copy may adjust."
    ]
  },
  "keys": {
    "push.like.single": {
      "description": "One actor liked recipient's post",
      "placeholders": [
        {"name": "actor", "description": "Display name or handle of the user"},
        {"name": "postAuthor", "description": "Owner of the post; usually 'you'"},
        {"name": "postSnippet", "description": "Short text from the post (optional)"}
      ],
      "title": "New like",
      "body": "{actor} liked {postAuthor}\u2019s post: {postSnippet}"
    },
    "push.like.multi": {
      "description": "Multiple actors liked recipient's post",
      "placeholders": [
        {"name": "actor", "description": "Leading actor name for readability"},
        {"name": "count", "description": "Number of additional actors"},
        {"name": "postAuthor", "description": "Owner of the post; usually 'your'"}
      ],
      "title": "New likes",
      "body": "{actor} and {count} others liked {postAuthor}\u2019s post"
    },

    "push.repost.single": {
      "description": "One actor reposted recipient's post",
